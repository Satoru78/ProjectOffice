<Window x:Class="ProjectOffice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectOffice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Margin=" 0 10 0 0">
            <Button Content="Проекты" Name="btnDash" Click="btnDash_Click" Margin="0 10 0 0">
            </Button>
            <Button Content="Задачи" Name="btnZadachi" Click="btnZadachi_Click" Margin="0 10 0 0">
            </Button>
            <Button Content="Гант" Name="btnGant" Click="btnGant_Click" Margin="0 10 0 0">
            </Button>
        </StackPanel>
        <Grid Grid.Column="1">
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
    </Grid>
</Window>
